include ../heading/heading.pug
include ../button/button.pug
include ../text-field/text-field.pug
include ../avatar/avatar.pug

mixin mod-pass-card(params = {})
  -
    const {
      title="",
      formMethod="",
      formAction="",
      textField={},
      button={},
      avatar={},
    } = params

  .mod-pass-card
    .mod-pass-card__title
      //- +avatar(avatar.testAva) АВАТАР ПО ЖЕЛАНИЮ
      form(
        class="mod-pass-card__form"
        method=`${formMethod}`,
        action=`./${formAction}.html`
      )
        section.mod-pass-card__details
          //- .mod-pass-card__login-details_type_password
          +text-field(textField.passwordOld)
          //- .mod-pass-card__login-details_type_password
          +text-field(textField.passwordNew)
          //- .mod-pass-card__login-details_type_password
          +text-field(textField.passwordNewAgain)
          +button(button.savePassword)

