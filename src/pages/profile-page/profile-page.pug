extends ../../layouts/ui.pug
include ../../components/profile-card/profile-card.pug

block content
  section.profile
    .profile__container
      .profile__profile-card
        +profile-card({
          formAction: 'profile-page',
          textField: {
            name: {
              placeholder: 'Имя',
              type: 'text',
              name: 'name',
              autocomplete: 'on',
            },
            surname: {
              placeholder: 'Фамилия',
              type: 'text',
              name: 'surname',
              autocomplete: 'on',
            },
            login: {
              placeholder: 'Почта',
              type: 'email',
              name: 'email',
              autocomplete: 'on',
            },
            nickname: {
              placeholder: 'Логин',
              type: 'text',
              name: 'login',
              autocomplete: 'on',
            },
            telephone: {
              placeholder: 'Tel:+7',
              type: 'tel',
              name: 'tel',
              autocomplete: 'on',
            },
          },
          button: {
            changeData: {
              buttonName: 'Изменить данные',
              type: 'submit',
              textColor: 'gray',
              link: "../link-test"
            },
            changePassword: {
              buttonName: 'Изменить пароль',
              type: 'submit',
              textColor: 'gray',
              link: "../link-test",
            },
            exit: {
              buttonName: 'Выйти',
              type: 'submit',
              textColor: 'red',
              link: "../link-test",
            },
          },
          avatar: {
            testAva: {
              img: "avatar",
              name: "Vladimir",
              inProfile: true,
            },
          },
        },)